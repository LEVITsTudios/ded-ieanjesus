  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#3b82f6",
  "scope": "/",
  "orientation": "portrait-primary",
  "icons": [
    {
      "src": "/placeholder-logo.svg",
